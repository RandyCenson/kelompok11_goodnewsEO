<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GoodnewsEO Home</title>
    <!-- link -->
    <link rel="stylesheet" href="style.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>

    <%- include('layouts/header.ejs') %>
        <!-- home -->

        <div class="home">
            <div class="title">
                <div class="title1">Goodnews</div><br><span class="title2"> Event Organizer </span>
            </div>

            <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <% data_file_upload.forEach((data,index)=> { %>
                        <% if (index==0) { %>
                            <div class="carousel-item active">
                                <img src="<%=data.img_path %>" class="d-block w-100" alt="<%=data.img_path %>">
                            </div>
                            <% } else {%>
                                <div class="carousel-item">
                                    <img src="<%=data.img_path %>" class="d-block w-100" alt="<%=data.img_path %>">
                                </div>
                                <% } %>
                                    <% }) %>

                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <!-- space -->
        <div class="space">

        </div>
        <!-- testimonial - 1 kotak panjang dan button check -->
        <div class="testimoni">
            <img src="template/carousel 1.jpg" alt="ab1">
            <div class="button-container">
                <a href="/gallery">
                    <button class="testimoni-button" src="/gallery">Gallery</button>
                </a>
            </div>
        </div>
        <div class="space2"></div>
        <div class="about">
            <img src="template/carousel 2.jpg" alt="ab1">
            <h1 class="about-text">About Us <br>Lorem ipsum dolor sit amet consectetur adipisicing elit. Nihil
                asperiores
                adipisci aliquid optio dolorum
                eveniet reprehenderit corporis est sint quaerat!</h1>
        </div>
        <div class="space2"></div>
        <!-- cards -->
        <div class="card-container">
            <div class="card" style="width: 18rem;">
                <img src="template/dj.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">DJ</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                        card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
            <div class="card" style="width: 18rem;">
                <img src="template/multimed.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Multimedia</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                        card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
            <div class="card" style="width: 18rem;">
                <img src="template/ligthing.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Lighting crew</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                        card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
            <div class="card" style="width: 18rem;">
                <img src="template/bunga.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Flowers</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                        card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
            <div class="card" style="width: 18rem;">
                <img src="template/cakes.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Cakes</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                        card's content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        <div class="space2"></div>
        <!-- calender -->
        <!-- List jadwal kosong -->
        <div class="queue">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Queue</th>
                        <th scope="col">Date</th>
                        <th scope="col">ordered by</th>
                        <th scope="col">Handler</th>
                    </tr>
                </thead>
                <% data_queue.forEach((data, index)=> { %>

                    <tbody>
                        <tr>

                            <th scope="row">
                                <%= index +1%>
                            </th>
                            <td>
                                <%= data.tanggal %>
                            </td>
                            <td>
                                <%= data.orderedby %>
                            </td>
                            <td>
                                <%= data.handler %>
                            </td>

                        </tr>

                    </tbody>

                    <% }) %>
            </table>
        </div>
        <div class="space2"></div>
        <div class="space2"></div>
        <!-- form contact us -->
        <div class="contactus">
            <form action="/sendEmail" method="post">
            <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="exampleFormControlInput1"
                        placeholder="name@example.com" name="email">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                    placeholder="Feel free to ask..." name="description"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <div class="space2"></div>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
<%- include('layouts/footer') %>

</html>